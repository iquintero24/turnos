@model SistemaTurnos.Web.Models.ViewModels.Afiliados.AfiliadoRegistroViewModel;

@{
    ViewData["Title"] = "Registro de Nuevo Afiliado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">

            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center rounded-top-3 p-3">
                    <h4 class="mb-0"><i class="fas fa-user-plus me-2"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">

                    <form asp-action="Register" method="post" class="needs-validation" novalidate>
                        @* ASP.NET Core Validation Summary *@
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        @* Campo Documento *@
                        <div class="mb-3">
                            <label asp-for="Documento" class="form-label fw-bold"></label>
                            <input asp-for="Documento" class="form-control form-control-lg" placeholder="Ingrese el número de documento" />
                            <span asp-validation-for="Documento" class="text-danger small"></span>
                        </div>

                        @* Campo Nombre *@
                        <div class="mb-3">
                            <label asp-for="Nombre" class="form-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control form-control-lg" placeholder="Ingrese el nombre completo" />
                            <span asp-validation-for="Nombre" class="text-danger small"></span>
                        </div>

                        @* Campo Correo *@
                        <div class="mb-3">
                            <label asp-for="Correo" class="form-label fw-bold"></label>
                            <input asp-for="Correo" type="email" class="form-control form-control-lg" placeholder="ejemplo@dominio.com" />
                            <span asp-validation-for="Correo" class="text-danger small"></span>
                        </div>

                        @* Campo Dirección (Inferred from AfiliadoController.cs Edit action) *@
                        <div class="mb-4">
                            <label asp-for="Direccion" class="form-label fw-bold"></label>
                            <input asp-for="Direccion" class="form-control form-control-lg" placeholder="Ingrese la dirección de residencia" />
                            <span asp-validation-for="Direccion" class="text-danger small"></span>
                        </div>
                        
                        @* Botones de Acción *@
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg me-md-2">
                                <i class="fas fa-arrow-left me-2"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="fas fa-save me-2"></i> Registrar Afiliado
                            </button>
                        </div>
                    </form>

                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}