@model SistemaTurnos.Web.Models.ViewModels.Afiliados.AfiliadoRegistroViewModel;

@{
    ViewData["Title"] = "Editar Afiliado";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0 rounded-3">
                <div class="card-header bg-primary text-white text-center py-3 rounded-top">
                    <h4 class="mb-0"><i class="fas fa-user-edit me-2"></i> @ViewData["Title"]</h4>
                </div>
                <div class="card-body p-4">
                    
                    @* Formulario de Edición *@
                    <form asp-action="Edit" method="post">
                        
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        
                        @* ID Oculto (CRÍTICO para saber qué registro actualizar) *@
                        <input type="hidden" asp-for="Id" />

                        <fieldset class="border p-3 mb-4 rounded-3">
                            <legend class="float-none w-auto px-2 fs-6 text-primary">Datos del Afiliado</legend>

                            @* Campo Documento *@
                            <div class="mb-3">
                                <label asp-for="Documento" class="form-label fw-bold"></label>
                                <input asp-for="Documento" class="form-control form-control-lg" />
                                <span asp-validation-for="Documento" class="text-danger"></span>
                            </div>

                            @* Campo Nombre *@
                            <div class="mb-3">
                                <label asp-for="Nombre" class="form-label fw-bold"></label>
                                <input asp-for="Nombre" class="form-control form-control-lg" />
                                <span asp-validation-for="Nombre" class="text-danger"></span>
                            </div>

                            @* Campo Correo *@
                            <div class="mb-3">
                                <label asp-for="Correo" class="form-label fw-bold"></label>
                                <input asp-for="Correo" class="form-control form-control-lg" />
                                <span asp-validation-for="Correo" class="text-danger"></span>
                            </div>

                            @* Campo Estado (Checkbox o Switch para Activo/Inactivo) *@
                            <div class="mb-3 form-check form-switch p-3 bg-light rounded-3 shadow-sm">
                                <input class="form-check-input" type="checkbox" role="switch" id="estadoSwitch" asp-for="Estado">
                                <label class="form-check-label fw-bold" for="estadoSwitch">
                                    <i class="fas fa-power-off me-1"></i> Estado (Activo/Inactivo)
                                </label>
                                <span asp-validation-for="Estado" class="text-danger d-block"></span>
                            </div>
                        </fieldset>

                        @* Botones de Acción *@
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                            <a asp-action="Index" class="btn btn-secondary btn-lg me-md-2 shadow-sm">
                                <i class="fas fa-arrow-left me-1"></i> Volver al Listado
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg shadow-sm">
                                <i class="fas fa-save me-1"></i> Guardar Cambios
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>