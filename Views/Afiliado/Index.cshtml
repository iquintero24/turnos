@using SistemaTurnos.Web.Models.ViewModels.Afiliados
@model SistemaTurnos.Web.Models.shared.PaginacionResponse<AfiliadoViewModel>

@{
    ViewData["Title"] = "Gestión de Afiliados";
}

<div class="container mt-4">

    @* Título y Botón de Registro *@
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2><i class="fas fa-users-cog text-primary me-2"></i> @ViewData["Title"]</h2>
        <a asp-action="Register" class="btn btn-success shadow-sm">
            <i class="fas fa-user-plus me-2"></i> Registrar Nuevo Afiliado
        </a>
    </div>

    @* Mensajes de Feedback (TempData) *@
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-primary">
                        <tr>
                            @* CORRECCIÓN FINAL: Usamos FirstOrDefault() sobre Model.Elementos para resolver la ambigüedad en DisplayNameFor. *@
                            <th>@Html.DisplayNameFor(model => model.Elementos.FirstOrDefault().Documento)</th>
                            <th>@Html.DisplayNameFor(model => model.Elementos.FirstOrDefault().Nombre)</th>
                            <th>@Html.DisplayNameFor(model => model.Elementos.FirstOrDefault().Correo)</th>
                            <th class="text-center">Estado</th>
                            <th class="text-center">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @* CORRECCIÓN: Se itera sobre Model.Elementos, no sobre Model *@
                        @foreach (var item in Model.Elementos)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.Documento)</td>
                                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                                <td>@Html.DisplayFor(modelItem => item.Correo)</td>
                                <td class="text-center">
                                    @if (item.Estado)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">Inactivo</span>
                                    }
                                </td>
                                <td class="text-center">
                                    
                                    @* Botón de Edición *@
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info me-1" title="Editar">
                                        <i class="fas fa-edit"></i>
                                    </a> 
                                    
                                    @* Botón de Carnet *@
                                    <a asp-action="Carnet" asp-route-id="@item.Id" target="_blank" class="btn btn-sm btn-outline-primary me-1" title="Ver Carnet">
                                        <i class="fas fa-id-card"></i>
                                    </a> 
                                    
                                    @* Botón de Eliminar (usando un formulario para POST) *@
                                    <form asp-action="Delete" asp-route-id="@item.Id" method="post" style="display:inline;" onsubmit="return confirm('¿Está seguro de que desea eliminar a este afiliado? Esta acción no se puede deshacer.');">
                                        <input type="hidden" name="id" value="@item.Id" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" title="Eliminar">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @* Controles de Paginación *@
            @* CORRECCIÓN: Usar Model.TotalPaginas para el conteo total *@
            @if (Model.TotalPaginas > 1)
            {
                <nav aria-label="Paginación de afiliados">
                    <ul class="pagination justify-content-center mt-3">
                        @* CORRECCIÓN: Usar Model.TienePaginaAnterior y PaginaActual *@
                        <li class="page-item @(Model.TienePaginaAnterior ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginaActual - 1)">Anterior</a>
                        </li>

                        @* CORRECCIÓN: Usar TotalPaginas y PaginaActual *@
                        @for (int i = 1; i <= Model.TotalPaginas; i++)
                        {
                            <li class="page-item @(i == Model.PaginaActual ? "active" : "")">
                                <a class="page-link" asp-action="Index" asp-route-page="@i">@i</a>
                            </li>
                        }

                        @* CORRECCIÓN: Usar TienePaginaSiguiente y PaginaActual *@
                        <li class="page-item @(Model.TienePaginaSiguiente ? "" : "disabled")">
                            <a class="page-link" asp-action="Index" asp-route-page="@(Model.PaginaActual + 1)">Siguiente</a>
                        </li>
                    </ul>
                </nav>
            }

        </div>
    </div>
</div>